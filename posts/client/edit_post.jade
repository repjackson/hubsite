template(name='edit_post')
    with post
        .ui.segment
            .ui.form
                .required.field
                    label Title
                    input#title(type='text' placeholder='Title' value=title)
                .field
                    label Upload Image
                    input(type='file' name='upload_picture' accept='image/*')
                if featured_image_url
                    .field
                        label Featured Image
                        img.ui.medium.image(src=featured_image_url)
                .field
                    label Description
                    textarea#description(rows='5') #{description}
                    // div
                    //     if unpicked_alchemy_tags.length
                    //         .ui.segment
                    //             h5.ui.header Suggested Tags
                    //             div
                    //                 each unpicked_alchemy_tags
                    //                     .add_alchemy_suggestion.ui.small.compact.basic.button 
                    //                         i.plus.icon
                    //                         |#{this}
                    //             #add_all_alchemy.ui.blue.button Add All Suggestions
                    // #alchemy_suggest.ui.basic.button Suggest Tags
                .field
                    label Post Tags
                    each tags
                        .ui.basic.button.post_tag
                            i.minus.icon
                            |#{this}
                    .ui.left.icon.input
                        i.add.icon
                        input#add_post_tag(type='text' autofocus='' placeholder='Add Tag' maxlength='50')
                if tags
                    #save_post.ui.large.green.button Save
                #delete_post.ui.red.large.button Delete