template(name='people')
    .ui.container
        // if currentUser
        //     +profile
        .ui.centered.cards
            each people
                +person_card


template(name='person_card')
    .ui.card
        a.image(href="/person/view/#{_id}")
            img(src=person_image_url)
        .content
            .header
                a(href="/person/view/#{_id}") #{name}
        .content
            each tags
                .ui.small.compact.button.person_tag(class=tag_class) #{this}
        .content
            i.building.icon
            | #{company}
            // div {{nl2br bio}}
        .content
            i.linkify.icon
            a(href=website target='_blank') #{website}
