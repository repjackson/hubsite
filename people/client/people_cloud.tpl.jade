.ui.center.aligned.basic.segment
    .ui.header Browse #{filter}
        if can_add
            #add.ui.compact.basic.button
                i.green.plus.icon
                |Add #{filter}
    if selected_tags
        #clear_tags.ui.red.big.compact.icon.circular.button
            i.remove.icon
    if selected_tags
        each selected_tags
            a.ui.red.big.compact.circular.button.unselect_tag
                strong #{this}
    each all_tags
        .ui.compact.basic.circular.button.select_tag(class=tag_cloud_class) #{this.name}
            // small #{this.count}
