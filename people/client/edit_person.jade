template(name='edit_person')
    with person
        .ui.text.container
            .ui.segment
                .ui.form
                    +edit_image
                    .field
                        label Name
                        .ui.left.icon.input
                            i.user.icon
                            input#name(type='text' value=name)
                    .field
                        label Company
                        .ui.left.icon.input
                            i.building.icon
                            input#company(type='text' value=company)
                    .field
                        label Position
                        .ui.input
                            input#position(type='text' value=position)
                    .field
                        label Website
                        .ui.left.icon.input
                            i.linkify.icon
                            input#website(type='text' value=website)
                    .field
                        label Linkedin
                        .ui.left.icon.input
                            i.linkedin.icon
                            input#linkedin(type='text' value=linkedin)
                    +edit_tags
                    .field
                        label Bio
                        textarea#bio(rows='5') #{bio}
                    .field
                        #save_person.ui.large.green.button Save
                        
