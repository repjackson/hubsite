template(name='edit_person')
    with person
        .ui.text.container
            .ui.segment
                .ui.form
                    .field
                        if person_image_url
                            img.ui.medium.circular.centered.image(src=person_image_url)
                            a#remove_photo.ui.top.right.attached.basic.label
                                i.remove.red.link.icon
                                | Remove Photo
                        else
                            label Upload Profile Image (1mb Max, http://resizeimage.net/ for image resizing)
                            .ui.input
                                input(type='file' name='upload_picture' accept='image/*')
                    .field
                        label Name
                        .ui.left.icon.input
                            i.user.icon
                            input#name(type='text' value=name)
                    .field
                        label Company
                        .ui.left.icon.input
                            i.building.icon
                            input#company(type='text' value=company)
                    .field
                        label Website
                        .ui.left.icon.input
                            i.linkify.icon
                            input#website(type='text' value=website)
                    .field
                        label Tags
                        each tags
                            .ui.basic.button.tag
                                i.remove.icon
                                |#{this}
                        .ui.left.icon.small.input
                            i.add.green.icon
                            input#add_tag(type='text' placeholder='Add tag')
                    .field
                        label Bio
                        textarea#bio(rows='5') #{bio}
                    .field
                        #save_person.ui.large.green.button Save
                        
