template(name='posts')
    div
        img.ui.centered.fluid.image(src='/banners/blog_banner.jpg', alt='')
        h1.overlay-text Impact Hub Boulder Blog
    +cloud filter='post'
    .ui.container.segment
        .ui.divided.items
            each posts
                +post


template(name='post')
    .ui.item
        .image
            img.ui.medium.image(src="{{c.url image_id}}")
        .content
            .header
                h2.ui.header #{title}
            .meta Published #{publish_when}
            .description
                |!{description}
            .extra
                each tags
                    .ui.compact.button.post_tag(class=post_tag_class) #{this}
                if isInRole 'admin'
                    .edit_post.ui.labeled.primary.basic.right.floated.icon.button
                        i.pencil.icon
                        |Edit post    