template(name='services')
    .ui.hidden.divider
    .ui.basic.very.padded.center.aligned.container
        h1.ui.header Services
            #add_service.ui.compact.basic.button
                i.green.plus.icon
                |Add Service
    +cloud filter='service'
    .ui.container
        .ui.centered.three.cards
            each services
                +service


template(name='service')
    .ui.card
        .image
            img.ui.medium.image(src="{{c.url image_id}}")
        .content
            .header
                h2.ui.header #{title}
            .meta
                // .ui.header service Topics:
                each tags
                    .ui.compact.button.service_tag(class=service_tag_class) #{this}
                |!{description}
        .content
            span.right.floated
                |$#{price}
            +favorite
            if isInRole 'admin'
                .edit_service.ui.labeled.primary.basic.icon.button
                    i.pencil.icon
                    |Edit    