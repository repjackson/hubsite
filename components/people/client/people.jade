template(name='people')
    div
        img.ui.centered.fluid.image(src='/banners/people_banner.jpg', alt='')
        h1.overlay-text.banner-text Impact Hub Members
    +people_cloud
    .ui.container
        .ui.centered.four.stackable.cards
            each people
                +person_card


template(name='person_card')
    .ui.card
        a.image(href="/profile/view/#{_id}")
            img(src="{{c.url profile.image_id width=300 height=300 gravity='face' crop='fill'}}")
            if published
                .ui.top.right.attached.green.label Published
            else
                .ui.top.right.attached.red.label Unpublished
            // if checked_in
            //     .ui.top.left.attached.green.label Checked In
            // else
            //     .ui.top.left.attached.red.label Checked Out
        .content
            .header
                a(href="/profile/view/#{_id}") #{profile.name}
            .meta
                | #{profile.position}
        .content
            each tags
                .ui.tiny.compact.button.person_tag(class=tag_class) #{this}
