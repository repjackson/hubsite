template(name='people')
    #people_slider(style='width: 998px; height: 200px;')
        .ls-slide(data-ls='slidedelay: 2000;')
            img.ls-bg(src="{{c.url 'people' width=998 height=200 crop='crop' gravity='north'}}", alt='Slide background')
            h1.ls-l.overlay-text.slider-text(style="top: 50%; text-size: 400%;") 
                | Impact Hub Members
    +people_cloud
    .ui.container
        .ui.centered.four.stackable.cards
            each member_profiles
                +profile_card

template(name='profile_card')
    .ui.card
        a.image(href="/view/#{_id}")
            img(src="{{c.url image_id width=300 height=300 gravity='face' crop='fill'}}")
            // if checked_in
            //     .ui.top.left.attached.green.label Checked In
            // else
            //     .ui.top.left.attached.red.label Checked Out
        .content
            .header
                a(href="/view/#{_id}") #{title}
        .content
            each tags
                .ui.tiny.compact.button.person_tag(class=tag_class) #{this}
