template(name='events')
    .ui.container
        #event_slider(style='width: 1000px; height: 300px;')
            .ls-slide(data-ls='slidedelay: 2000;')
                img.ls-bg(src="{{c.url 'vinetta' width=1000 height=300 crop='fill' gravity='north' effect='improve'}}", alt='Slide background')
                h1.ls-l.overlay-text.slider-text(style="top: 50%; text-size: 300%;") 
                    | Events at Impact Hub Boulder
        .ui.basic.segment
            if isInRole 'admin'
                .ui.labeled.input
                    .ui.basic.label 
                        i.red.configure.icon
                        |Add Eventbrite Event by Id
                    input#import_eventbrite(type='text')
                #add_event.ui.basic.button Add Event
                .ui.hidden.divider
            .ui.stackable.grid
                .twelve.wide.column
                    +featured_events
                    +upcoming_events
                    +past_events
                .four.wide.column
                    a.impact-button-dark(href='/rent') Host Your Event Here
                    +event_cloud
                    +google_calendar


template(name='upcoming_events')
    h2.impact-header Upcoming Events
    .ui.centered.stackable.three.cards
        each upcoming_events
            +event_card



template(name='past_events')
    h2.impact-header Past Events
    .ui.centered.stackable.three.cards
        each past_events
            +event_card



