template(name='event_card')
    .ui.card
        .image
            a(href="/event/view/#{_id}")
                if image_id
                    img.ui.image(src="{{c.url image_id height=175 width=300 crop='fill'}}")            
                else
                    img.ui.image(src="{{c.url 'ih_logo_placeholder_pdwzf8' height=175 width=300 crop='fill'}}")            
                    // img.ui.large.image(src="/img/ih_logo_placeholder.png")
        .content
            // .header
            h3.ui.red.header.make-uppercase 
                a(href="/event/view/#{_id}") #{title}
            .meta
                strong #{day} 
            .meta
                strong #{start_time} 
                |to 
                strong #{end_time}
            if location
                .meta
                    span @#{location}
        // .content
        //     |!{snippet}
        .extra.content
            +favorite
            if isInRole 'admin'
                .edit_event.ui.right.floated.primary.basic.button
                    i.pencil.icon
                    |Edit Event