    div
        img.ui.fluid.image(src='/banners/event_banner_cut.jpg', alt='')
        h1.overlay-text.banner-text Events at Impact Hub Boulder
    .ui.container
        +cloud filter='event'
        // h2.impact-header Featured Events
        #sync_events.ui.big.basic.button Sync Eventbrite Events
        +featured_events
        h2.impact-header Upcoming Events
        .ui.centered.four.cards
            each events
                +event_card
