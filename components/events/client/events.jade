template(name='events')
    #event_slider(style='width: 800px; height: 100px;')
        .ls-slide(data-ls='slidedelay: 4000;')
            img.ls-bg(src='/banners/event_banner_cut.jpg', alt='Slide background' height='100')
            .ls-l.overlay-text.slider-text(style="top: 10px;") 
                | Events at Impact Hub Boulder
    .ui.container
        // +cloud filter='event'
        .ui.hidden.divider
        if isInRole 'admin'
            .ui.labeled.input
                .ui.basic.label 
                    i.red.configure.icon
                    |Add Eventbrite Event by Id
                input#add_event(type='text')
        .ui.hidden.divider
        .ui.stackable.grid
            .eleven.wide.column
                +featured_events
                h2.impact-header Upcoming Events
                if Template.subscriptionsReady
                    .ui.centered.stackable.three.cards
                        each events
                            +event_card
                else
                    |Loading Events...
            .five.wide.column
                .ui.big.red.fluid.button.make-uppercase Host Your Event Here
                +event_cloud
                // +fullcalendar options



