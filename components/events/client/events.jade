template(name='event_card')
    .ui.card
        .image2
            a(href="/event/view/#{_id}")
                if image_id
                    img.ui.image(src="{{c.url image_id height=175 width=300 crop='fill'}}")            
                else
                    img.ui.centered.large.image(src="/img/Impact_Hub_Boulder_logo.png")
        .content
            .header
                h2.ui.header 
                    a(href="/event/view/#{_id}") #{title}
            .meta
                strong #{day} 
                |from
                strong #{start_time} 
                |to 
                strong #{end_time}
            if location
                .meta
                    span @#{location}
        .content
            |!{snippet}
        .extra.content
            +favorite
            if isInRole 'admin'
                .edit_event.ui.right.floated.primary.basic.button
                    i.pencil.icon
                    |Edit Event