with event
    .ui.container.segment
        .ui.form
            +edit_title
            .ui.segment
                +edit_image
                if eventbrite_image
                    .ui.header Eventbrite Image (custom image will replace this)
                    img.ui.medium.image(src=eventbrite_image)
            .fields
                .field
                    label Start Date (current is #{start_date})
                    input#start_date(type='date' value=start_date)
                .field
                    label Start Time
                    input#start_time(type='time' value=start_time)
            .fields
                .field
                    label End Date (current is #{end_date})
                    input#end_date(type='date' value=end_date)
                .field
                    label End Time
                    input#end_time(type='time' value=end_time)
            +edit_location
            +edit_description
            +edit_tags
            +edit_featured
            +publish_button
            if title
                #save_event.ui.large.green.button Save
            +delete_button