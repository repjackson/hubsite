with event
    .ui.text.container.basic.segment
        +back_button
        div
            img.ui.centered.large.image(src="{{c.url image_id width=600 height=600 crop='fill'}}")
            .overlay-text 
                h1 #{title}
                h3 #{day} from #{start_time} to #{end_time}
                h3 @#{location}
        .ui.hidden.divider
        .description
            // .ui.header Event Topics:
            each tags
                // .ui.compact.button.event_tag(class=event_tag_class) #{this}
                .ui.basic.label(class=event_tag_class) #{this}
            // |#{start_date} to #{end_date}
            .ui.basic.padded.segment
                |!{description}
        if attendee_ids
            .content
                .ui.header Attendees:
                .ui.vertical.list
                    each attendee_ids
                        +user_blurb id=this
        .extra.content
            if isInRole 'admin'
                .edit_event.ui.primary.basic.button
                    i.pencil.icon
                    |Edit Event
            if currentUser
                if attending
                    .ui.basic.button.leave_event
                        i.red.minus.icon
                        |Leave
                else
                    .ui.button.basic.join_event
                        i.green.plus.icon
                        |Join
            +favorite
            else
                p Sign in to attend    
                