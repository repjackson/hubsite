template(name='edit_event')
    with event
        .ui.container.segment
            .ui.form
                +edit_title
                +edit_image
                .field
                    label Start Date/Time
                    input#start_date(type='text' value=start_date)
                .field
                    label End Date/Time
                    input#end_date(type='text' value=end_date)
                +edit_description
                +edit_tags
                .field
                    if featured_event
                        #make_unfeatured.ui.green.button
                            i.toggle.on.icon
                            |Featured
                    else
                        #make_featured.ui.basic.button
                            i.toggle.off.icon
                            |Unfeatured
                if tags
                    #save_event.ui.large.green.button Save
                #delete_event.ui.red.large.button Delete