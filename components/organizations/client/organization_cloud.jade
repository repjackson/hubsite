template(name='organization_cloud')
    .ui.center.aligned.segment
        .ui.header Browse organizations
            if can_add_organization
                #add_organization.ui.compact.basic.button
                    i.green.plus.icon
                    |Add organization
        if selected_organization_tags
            #clear_tags.ui.red.big.compact.icon.button
                i.remove.icon
        if selected_organization_tags
            each selected_organization_tags
                a.ui.red.big.compact.button.unselect_tag
                    strong #{this}
        each organization_tags
            .ui.compact.basic.button.select_tag(class=organization_tag_class) #{this.name}
                small #{this.count}
