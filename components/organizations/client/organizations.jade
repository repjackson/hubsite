template(name='organizations')
    div
        img.ui.centered.fluid.image(src='/banners/organization_banner.jpg', alt='')
        h1.overlay-text.banner-text Community at Impact Hub Boulder
    .ui.container.basic.segment
        .ui.stackable.divided.grid
            .twelve.wide.column
                .ui.divided.items
                    each organizations
                        +organization
            .four.wide.column
                +cloud filter='organization'


template(name='organization')
    .ui.item
        .image
            img.ui.medium.image(src="{{c.url image_id width=500 crop='fit'}}")
        .content
            .header
                a(href="/organization/view/#{_id}")
                    h2.ui.header #{title}
            .meta
                a(href=link target="_blank") #{link}
            .description
                |!{description}
            .extra
                i.tags.icon
                each tags
                    .ui.compact.button.organization_tag(class=organization_tag_class) #{this}
                    // .ui.basic.label(class=organization_tag_class) #{this}
                if attendees
                    .ui.header Attendees:
                    .ui.horizontal.list
                        each attendees
                            .item 
                                img.ui.avatar.image(src=this.profile.profile_image_url)
                                strong #{this.profile.name}
                                each this.tags
                                    .ui.small.basic.label #{this}
            if isInRole 'admin'
                .extra
                    .edit_organization.ui.right.floated.primary.basic.button
                        i.pencil.icon
                        |Edit Organization