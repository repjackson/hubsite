template(name='organizations')
    h1.ui.center.aligned.header Community at Impact Hub Boulder
    img.ui.centered.fluid.image(src='/banners/organization_banner.jpg', alt='')
    +cloud filter='organization'
    .ui.container.basic.segment
        .ui.divided.items
            each organizations
                +organization


template(name='organization')
    .ui.item
        .image
            img.ui.medium.image(src="{{c.url image_id}}")
        .content
            .header
                h2.ui.header #{title}
            .meta
                a(href=link target="_blank") #{link}
            .description
                |!{description}
            .extra
                i.tags.icon
                each tags
                    .ui.compact.button.organization_tag(class=organization_tag_class) #{this}
                    // .ui.basic.label(class=organization_tag_class) #{this}
                if attendees
                    .ui.header Attendees:
                    .ui.horizontal.list
                        each attendees
                            .item 
                                img.ui.avatar.image(src=this.profile.profile_image_url)
                                strong #{this.profile.name}
                                each this.tags
                                    .ui.small.basic.label #{this}
            .extra
                if is_author
                    .edit_organization.ui.labeled.right.floated.primary.basic.icon.button
                        i.pencil.icon
                        |Edit Organization