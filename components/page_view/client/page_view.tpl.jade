with item
    .ui.container
        .image
            img.ui.centered.image(src="{{c.url image_id }}")
            .overlay-text 
                h1 #{title}
        .ui.hidden.divider
        .ui.divided.grid
            .ten.wide.column
                .meta
                    a(href=link target='_blank') #{link}
                .description
                    |!{description}
            .five.wide.column
                h2.impact-header Tags
                each ecosystem_tags
                    .ui.basic.label #{this}
                h2.impact-header Actions
                +favorite
                h2.impact-header Status
                if published
                    .ui.basic.green.label Published
                else
                    .ui.basic.red.label Unpublished

        if isInRole 'admin'
            .extra.content
                .ui.divider
                i.large.red.configure.icon
                .edit.ui.primary.basic.button
                    i.pencil.icon
                    |Edit    