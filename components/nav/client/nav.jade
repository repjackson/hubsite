template(name='top_nav')
    .ui.inverted.menu
        .right.menu
            if currentUser
                if isInRole 'admin'
                    a.item(href='/admin' class="{{isActivePath '/admin'}}")
                        i.configure.icon
                        | Admin
                a.item(href='/services' class="{{isActivePath '/services'}}")
                    i.laptop.icon
                    | Services
                a.item(href='/conversations' class="{{isActivePath '/conversations'}}")
                    i.comments.outline.icon
                    | Conversations
                a.item(href='/messages' class="{{isActivePath '/messages'}}")
                    i.mail.icon
                    | Messages
                    if currentUser.unreadcount
                        |(#{currentUser.unreadcount})
                a.item(href="/profile/edit" class="{{isActivePath '/profile/edit'}}")
                    if currentUser.profile.image_id
                        img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    else
                        i.user.icon
                    | #{currentUser.profile.name}
                a#logout.ui.item(href='#') 
                    i.sign.out.icon
                    |Sign Out
            else
                a.ui.item(href='/sign-in') 
                    i.sign.in.icon
                    |Sign In
                a.ui.item(href='/sign-up') 
                    i.add.user.icon
                    |Register
    a.header-logo(href='/' class="{{isActivePath '/'}}")
        img.ui.medium.image(src='/img/Impact_Hub_Boulder_logo.png')


