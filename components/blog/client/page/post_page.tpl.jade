with post
    .ui.text.container.segment
        .content
            // a.ui.top.left.attached.basic.button(href="/posts")
            //     i.arrow.left.icon
            //     |Blog
            if image_id
                div
                    img.ui.centered.image(src="{{c.url image_id}}")
                    .overlay-text 
                        h1 #{title}
            else
                h1 #{title}
            if publish_date
                h4.ui.header Published #{publish_when}
            .ui.basic.segment
                |!{description}
            if tags
                .ui.basic.segment
                    each tags
                        .ui.basic.label #{this}
        .extra.content
            if isInRole 'admin'
                .edit_post.ui.primary.basic.button
                    i.pencil.icon
                    |Edit    