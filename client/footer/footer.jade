template(name='footer')
    .ui.basic.fluid.inverted.segment.footer
        .ui.stackable.three.column.grid
            .column
                +contact_form
            .center.aligned.column
                +badges
            .column
                +contact_info
                .ui.hidden.divider
                +twitter_widget
                
template(name='contact_form')
    .ui.inverted.segment
        .ui.inverted.form
            h2.ui.inverted.make-uppercase.header Contact Us
            .grouped.inverted.fields
                // h4.ui.inverted.header(for='reason') I am contacting you to...
                .field
                    .ui.toggle.checkbox
                        input#question(type='radio', name='reason', checked='', tabindex='0')
                        label(for='question') I'm asking a question / providing feedback.
                .field
                    .ui.toggle.checkbox
                        input#cancel(type='radio', name='reason', tabindex='0')
                        label(for='cancel') I want to change, pause, or cancel my membership.
            .required.field
                input#name(type='text' placeholder='Name')
            .required.field
                input#email(type='email' placeholder='Email')
            .required.field
                input#message(type='text' placeholder='Message')
            // .four.wide.field
            //     .ui.basic.segment
            //         +reCAPTCHA
            #submit_contact_form.ui.inverted.fluid.basic.button
                |Submit



