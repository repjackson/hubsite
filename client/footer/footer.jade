        img.ui.tiny.image(src='/badges/entrepreneurial_by_nature.jpg')
    img.ui.tiny.image(src='/badges/B-Corp.png')
    .ui.two.column.centered.grid
        .ui.centered.row
            .centered.column
                // .ui.compact.segment
            .centered.column
    .ui.hidden.divider
    a.ui.icon.big.white.inverted.button(href='https://www.facebook.com/ImpactHubBoulder' target="_blank")
        i.facebook.link.icon
    a.ui.icon.big.white.inverted.button(href='https://twitter.com/ImpactHubBldr' target="_blank")
        i.twitter.link.icon

    
    
